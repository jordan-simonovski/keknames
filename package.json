{
  "name": "keknames",
  "version": "1.0.0",
  "description": "Online multiplayer Codenames clone with El Risitas-themed card art",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm ci --prefix client",
    "build:server": "tsc",
    "build:client": "npm run build --prefix client",
    "build": "tsc && npm run build:client",
    "start": "node dist/index.js",
    "dev:server": "tsc --watch & node --watch dist/index.js",
    "dev:client": "npm run dev --prefix client",
    "dev": "npm run build:server && (npm run dev:server & npm run dev:client)",
    "lint": "npm run lint --prefix client",
    "test": "npm run test --prefix client",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"server/**/*.ts\" \"client/src/**/*.{js,jsx,css}\"",
    "format:check": "prettier --check \"server/**/*.ts\" \"client/src/**/*.{js,jsx,css}\""
  },
  "dependencies": {
    "express": "^4.21.0",
    "helmet": "^8.1.0",
    "socket.io": "^4.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
